@model IEnumerable<MyResumeOfWPF.PDO.SkillRow>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ComponentOneColumn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ComponentTwoColumn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ComponentThreeColumn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ComponentFourColumn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TopicColumn)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ComponentOneColumn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ComponentTwoColumn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ComponentThreeColumn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ComponentFourColumn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TopicColumn)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SkillRowId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SkillRowId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SkillRowId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
